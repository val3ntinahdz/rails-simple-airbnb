<div class="container w-75 mt-4">
  <h1>Add a new Flat</h1>

  <%= simple_form_for @flat do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests, collection: [1, 2, 3, 4, 5] %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
</div>
