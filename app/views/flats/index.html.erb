<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" href="#">Simple Airbnb</a>
  <form class="form-inline my-2 my-lg-0">
      <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>

<div>
  <div class="container mt-5">
  <h1 class="mb-4">All Flats</h1>
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-4 mb-4">
          <div class="card" style="width: 18rem;">
            <%= image_tag("apartment.jpg") %>
            <div class="card-body">
              <h6 class="card-title"><%= flat.name %></h6>
              <p class="card-subtitle mb-2 text-muted"><%= flat.address %></p>
              <div class="d-flex jusitify-content-around">
                <i class="fa-solid fa-people-line"><%= flat.number_of_guests %></i>
                <i class="fa-solid fa-euro-sign"><%= flat.price_per_night %></i>
              </div>
            </div>
            <div class="d-flex justify-content-between p-3">
              <%= link_to "More Info", flat_path(flat) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
